pipeline {
    agent any

    environment {
        // Docker Hub credentials (configured in Jenkins ‚Üí Manage Credentials)
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')

        // Docker repositories
        FRONTEND_REPO = 'kishan7798/frontend-app'
        BACKEND_REPO  = 'kishan7798/backend-app'

        // SonarQube configuration
        SONARQUBE_SERVER  = "SonarQubeServer"
        SONARQUBE_SCANNER = "SonarQubeScanner"

        // SonarQube authentication token (add this as "sonarqube-auth-token" in Jenkins credentials)
        SONARQUBE_TOKEN = credentials('sonarqube-auth-token')
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Dharmendra7798/Dharmendra_CapstoneProject.git'
            }
        }

        stage('Code Quality Analysis (SonarQube)') {
            steps {
                script {
                    echo "üîé Running SonarQube Code Analysis..."
                    def scannerHome = tool name: "${SONARQUBE_SCANNER}", type: 'hudson.plugins.sonar.SonarRunnerInstallation'

                    withSonarQubeEnv("${SONARQUBE_SERVER}") {
                        sh """
                            cd ${WORKSPACE}/Application-Code/backend
                            ${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=backend \
                                -Dsonar.sources=. \
                                -Dsonar.host.url=$SONAR_HOST_URL \
                                -Dsonar.login=$SONARQUBE_TOKEN \
                                -Dsonar.projectName="Backend Analysis"

                            cd ${WORKSPACE}/Application-Code/frontend
                            ${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=frontend \
                                -Dsonar.sources=. \
                                -Dsonar.host.url=$SONAR_HOST_URL \
                                -Dsonar.login=$SONARQUBE_TOKEN \
                                -Dsonar.projectName="Frontend Analysis"
                        """
                    }
                }
            }
        }

        // stage('Dependency Check') {
        //     steps {
        //         echo "üîç Running OWASP Dependency Check via Docker..."
        //         sh '''
        //             docker run --rm \
        //                 -v $(pwd):/src \
        //                 -v $(pwd)/dependency-check-data:/usr/share/dependency-check/data \
        //                 -v $(pwd)/dependency-check-report:/report \
        //                 owasp/dependency-check:latest \
        //                 --scan /src \
        //                 --format "HTML" \
        //                 --project "CapstoneProject" \
        //                 --out /report

        //             echo "‚úÖ Dependency Check report generated at dependency-check-report/dependency-check-report.html"
        //         '''
        //     }
        // }

        stage('File Scan') {
            steps {
                script {
                    echo "üßæ Scanning for sensitive files..."
                    sh '''
                        echo "Checking for .env files..."
                        find Application-Code -type f -name ".env" || echo "No .env files found."

                        echo "Checking for AWS access keys..."
                        grep -rnE "AKIA[0-9A-Z]{16}" Application-Code || echo "No AWS keys found."
                    '''
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def GIT_COMMIT = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                    env.BACKEND_TAG  = "${BACKEND_REPO}:${GIT_COMMIT}"
                    env.FRONTEND_TAG = "${FRONTEND_REPO}:${GIT_COMMIT}"

                    echo "üê≥ Building Docker images..."
                    sh """
                        cd ${WORKSPACE}/Application-Code/backend
                        docker build -t ${BACKEND_TAG} .

                        cd ${WORKSPACE}/Application-Code/frontend
                        docker build -t ${FRONTEND_TAG} .
                    """
                }
            }
        }

        stage('Image Vulnerability Scan (Trivy)') {
            steps {
                script {
                    echo "üõ°Ô∏è Scanning Docker images with Trivy..."
                    sh '''
                        apt-get update -y && apt-get install -y wget apt-transport-https gnupg lsb-release

                        if ! command -v trivy > /dev/null; then
                            wget -qO - https://aquasecurity.github.io/trivy-repo/deb/public.key | gpg --dearmor -o /usr/share/keyrings/trivy.gpg
                            echo "deb [signed-by=/usr/share/keyrings/trivy.gpg] https://aquasecurity.github.io/trivy-repo/deb $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/trivy.list
                            apt-get update -y && apt-get install -y trivy
                        fi

                        mkdir -p ${WORKSPACE}/reports

                        echo "Scanning backend image..."
                        trivy image --exit-code 0 --severity HIGH,CRITICAL --format html \
                            -o ${WORKSPACE}/reports/backend-trivy-report.html ${BACKEND_TAG} || true

                        echo "Scanning frontend image..."
                        trivy image --exit-code 0 --severity HIGH,CRITICAL --format html \
                            -o ${WORKSPACE}/reports/frontend-trivy-report.html ${FRONTEND_TAG} || true
                    '''
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    echo "üîê Logging in to Docker Hub..."
                    sh """
                        echo \$DOCKERHUB_CREDENTIALS_PSW | docker login -u \$DOCKERHUB_CREDENTIALS_USR --password-stdin
                    """
                }
            }
        }

        stage('Push Docker Images to Docker Hub') {
            steps {
                script {
                    echo "üì§ Pushing Docker images to Docker Hub..."
                    sh """
                        docker push ${BACKEND_TAG}
                        docker push ${FRONTEND_TAG}
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "üöÄ Deploying to Kubernetes cluster..."
                    sh '''
                        if ! command -v kubectl > /dev/null; then
                            echo "Installing kubectl..."
                            curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
                            install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
                        fi

                        echo "Applying Kubernetes manifests..."
                        kubectl apply -f ${WORKSPACE}/k8s/apps/backend-deployment.yaml
                        kubectl apply -f ${WORKSPACE}/k8s/apps/backend-service.yaml
                        kubectl apply -f ${WORKSPACE}/k8s/apps/frontend-deployment.yaml
                        kubectl apply -f ${WORKSPACE}/k8s/apps/frontend-service.yaml
                    '''
                }
            }
        }

        stage('Archive Reports') {
            steps {
                echo "üìä Archiving all HTML reports..."
                archiveArtifacts artifacts: 'reports/**/*.html', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully built, scanned, pushed, and deployed!"
            echo "Backend Image: ${BACKEND_TAG}"
            echo "Frontend Image: ${FRONTEND_TAG}"
            cleanWs()
        }
        failure {
            echo "‚ùå Build failed! Check Jenkins console output for details."
        }
    }
}
